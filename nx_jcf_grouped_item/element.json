{
    "name": "nx_jcf_grouped_item",
    "title": "Customfield",
    "width": 500,
    "templates": {
        "render": "./templates/template.php",
        "content": "./templates/content.php"
    },
    "defaults": {
        "short_to": "2"
    },
    "placeholder": {
        "props": {
            "title": "Title",
            "fieldname": "name-of-field"
        }
    },
    "fields": {
        "title": {
            "label": "Title"
        },
        "fieldname": {
            "label": "Fieldname",
            "type": "text"
        },

        "template": {
            "label": "Template",
            "type": "editor"
        },
        "useshort": {
            "label": "Shortener",
            "type": "checkbox",
            "text": "use shortener for mobile"
        },
        "short_to": {
            "label": "Short to Word",
            "description": "'My Text' => 1 = My, 2 = Text",
            "show": "useshort"
        }
    },
    "fieldset": {
        "default": {
            "fields": [
                "title",
                "fieldname",
                "template",
                "useshort",
                "short_to"
            ]
        }
    }
}