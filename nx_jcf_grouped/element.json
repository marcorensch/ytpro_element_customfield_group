{
    "@import": "./element.php",
    "name": "nx_jcf_grouped",
    "title": "Grouped Customfields",
    "icon": "${url:images/icon.svg}",
    "iconSmall": "${url:images/iconSmall.svg}",
    "element": true,
    "container": true,
    "width": 500,
    "defaults": {
        "debug": "0",
        "container_alignement": "center"
    },
    "placeholder": {
        "children": [
            { "type": "nx_jcf_grouped_item", "props": {} },
            { "type": "nx_jcf_grouped_item", "props": {} },
            { "type": "nx_jcf_grouped_item", "props": {} }
        ]
    },
    "templates": {
        "render": "./templates/template.php",
        "content": "./templates/content.php"
    },
    "fields": {
        "content": {
            "label": "Items",
            "type": "content-items",
            "item": "nx_jcf_grouped_item"
        },
        "divider": {
            "label": "Field Divider",
            "description": "String to divide fields"
        },
        "divider_interval": {
            "label": "Divider Interval",
            "description": "Display Divider each x"
        },
        "rem_last": {
            "label": "Remove last divider",
            "type": "checkbox",
            "text": "Remove last divider"
        },
        "name": "${builder:name}",
        "status": "${builder:status}",
        "id": "${builder:id}",
        "class": "${builder:cls}",
        "container_alignement": {
            "label": "Alignement",
            "type": "select",
            "description":"Container Alignement",
            "options": {
                "left": "left",
                "center" : "center",
                "right" : "right"
            }
        },
        "debug": {
            "label": "Debug",
            "type": "select",
            "description":"See Browser Javascript Console for Messages",
            "options": {
                "Yes": "1",
                "No" : "0"
            }
        }
    },
    "fieldset": {
        "default": {
            "type": "tabs",
            "fields": [{
                    "title": "Items",
                    "fields": [
                        "content"
                    ]
                }, {
                    "title": "Config",
                    "fields": [
                        "container_alignement",
                        "divider",
                        "divider_interval",
                        "debug"
                    ]
                },
                "${builder:advanced}"
            ]
        }
    }
}